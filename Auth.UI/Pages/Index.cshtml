@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<script src="~/Script/Index.js"></script>
<!------ Include the above in your HEAD tag ---------->
@* <link href="~/css/Auth.css" rel="stylesheet" /> *@
<div class="wrapper" ng-controller="IndexCtrl">
    <div class="card" style="width: 100%;">
        <div class="card-header">
            Meeting Minutes
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" value="" name="optradio">Corporate
                        </label>
                        <label class="form-check-label" style="margin-left:50px;">
                            <input type="radio" class="form-check-input" value="" name="optradio">Individual
                        </label>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Customer Name 
                                <span style="color:red">*</span>
                                </label>
                            <div class="col-md-8">
                                <select class="form-control">
                                    <option>Default select</option>
                                </select>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Date
                            </label>
                            <div class="col-md-8 row">
                                <div class="col-md-6">
                                    <input type="date" class="form-control" id="CustomerName" placeholder="Customer name">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="CustomerName" class="col-md-4 col-form-label">
                                            Time
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" id="CustomerName" placeholder="Customer name">
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Meeting Place
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="CustomerName" placeholder="Customer name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Attends From Client Side
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Present client side"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Attends From Host Side
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Present self side"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Meeting Agenda
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Meeting agenda"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Meeting Discussion
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Meeting discussion"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CustomerName" class="col-md-4 col-form-label">
                                Meeting Decision
                                <span style="color:red">*</span>
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Meeting decision"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="card mt-2" style="width: 100%;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
        </ul>
    </div>
    <div class="card mt-2" style="width: 100%;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
        </ul>
    </div>
</div>
